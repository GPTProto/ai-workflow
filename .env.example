# AI Workflow Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# Required: OpenAI API Configuration
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# Optional: Alibaba Cloud OSS Configuration
# (For cloud storage of generated assets)
# ===========================================
OSS_REGION=oss-us-west-1
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your_bucket_name
OSS_CNAME=false
OSS_ENDPOINT=https://your-oss-endpoint.com
OSS_UPLOAD_PREFIX=frontend/workflow

# ===========================================
# Optional: Supabase Configuration
# (For workflow history persistence)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_TABLE_NAME=workflow_histories
